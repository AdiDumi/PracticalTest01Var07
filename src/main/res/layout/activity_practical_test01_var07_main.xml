<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".PracticalTest01Var07MainActivity" >

    <EditText
        android:id="@+id/left_edit_up_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:saveEnabled="false"
        android:inputType="number"
        android:ems="7"
        android:layout_alignParentLeft="true"
        android:gravity="center" />

    <EditText
        android:id="@+id/right_edit_up_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:saveEnabled="false"
        android:inputType="number"
        android:ems="7"
        android:layout_alignParentRight="true"
        android:gravity="center" />

    <EditText
        android:id="@+id/left_edit_down_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:saveEnabled="false"
        android:inputType="number"
        android:ems="7"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/left_edit_up_text"
        android:gravity="center" />

    <EditText
        android:id="@+id/right_edit_down_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:saveEnabled="false"
        android:inputType="number"
        android:ems="7"
        android:layout_alignParentRight="true"
        android:layout_below="@id/right_edit_up_text"
        android:gravity="center" />

    <Button
        android:id="@+id/center_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/right_edit_down_text"
        android:layout_centerHorizontal="true"
        android:text="@string/set" />

</RelativeLayout>